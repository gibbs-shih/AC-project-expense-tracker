<div class="container mt-5">

  <div class="row text-center">
    <div class="col-4">
      <h5 style="color:rgb(216, 25, 44);" class="text-end">＊必填欄位</h5>
    </div>
    <div class="col-4">
      <h3 style="color:rgb(103, 47, 8);">請修改你的支出</h3>
    </div>
  </div>

  <form class="mt-3" action="/expenses" method="POST">
    <div class="mb-3 row">
      <div class="col-4 text-end">
        <label for="name">
          <h5 class="text-center" style="color:rgba(216, 25, 44, 0.78);">名稱<sup>＊</sup> :</h5>
        </label>
      </div>
      <div class="col-5">
        <input id="name" type="text" name="name" class="form-control" placeholder="請輸入支出名稱" value={{expense.name}} required>
      </div>
    </div>

    <div class="mb-3 row">
      <div class="col-4 text-end">
        <label for="date">
          <h5 class="text-center" style="color:rgba(216, 25, 44, 0.78);">日期<sup>＊</sup> :</h5>
        </label>
      </div>
      <div class="col-5">
        <input id="date" type="date" name="date" class="form-control" placeholder="請輸入支出日期" value={{expense.date}} required>
      </div>
    </div>

    <div class="mb-3 row">
      <div class="col-4 text-end">
        <label for="category">
          <h5 class="text-center" style="color:rgba(216, 25, 44, 0.78);">類別<sup>＊</sup> :</h5>
        </label>
      </div>
      <div class="col-5 mb-3">
        <select name="category" class="form-select" value={{expense.category}} required>
          <option disabled selected>請選擇支出類別</option>
          <option value="家居物業">家居物業</option>
          <option value="交通出行">交通出行</option>
          <option value="休閒娛樂">休閒娛樂</option>
          <option value="餐飲食品">餐飲食品</option>
          <option value="其他">其他</option>
        </select>
      </div>
    </div>

    <div class="mb-3 row">
      <div class="col-4 text-end">
        <label for="amount">
          <h5 class="text-center" style="color:rgba(216, 25, 44, 0.78);">金額<sup>＊</sup> :</h5>
        </label>
      </div>
      <div class="col-5">
        <input id="amount" type="text" name="amount" class="form-control" placeholder="請輸入支出金額" value={{expense.amount}} required>
      </div>
    </div>

    <div class="d-flex justify-content-center">
      <button type="submit" class="m-3 btn btn-warning">
        <h4 style="color:rgb(17, 0, 255)">修改</h4>
      </button>
    </div>
  </form>

</div>